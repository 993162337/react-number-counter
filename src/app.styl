body
  margin 0
  padding 0
  font-family "Avenir"
  color #444
  
$green = #20B583

.content
  height 100vh
  width 100vw
  display flex
  align-items center
  justify-content center
  background #F1F1F1
  flex-direction column
  .control
    margin-top 20px
    input
      border-radius 3px 0 0 3px
      border: 1px solid $green
      height 25px
      outline none
      width 200px
      padding-left 10px
    button
      height 29px
      background $green
      border none
      padding 0 20px
      margin 0
      outline none
      border-radius 0 3px 3px 0
      color white
  
._number-counter
  height 88px !important
  font-size 6rem !important

._number-counter__item
  width 60px !important
  
._number-counter__item_number
  height 88px !important
  line-height 88px
  text-shadow 1px 2px 2px white